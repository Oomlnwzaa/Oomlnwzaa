<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F9F9"
    tools:context=".ui.HomeMenu.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:hint="Name"
        android:translationZ="90dp"

        android:textColorHighlight="#ff7eff15"
        app:layout_constraintEnd_toStartOf="@+id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:translationZ="90dp"
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_baseline_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:translationZ="90dp"
        android:id="@+id/button12"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/free_settings_icon_3110_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"

            android:layout_marginTop="220px"
            android:layout_marginRight="70px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:text="รีสอร์ท แนะนำ"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:src="@drawable/sangtong" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:text="แสงทอง รีสอร์ท"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="30px"
                android:backgroundTint="#A4EBF3"
                android:text="เพิ่มเติม"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:src="@drawable/tamajun" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:text="ท่ามาจัน"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/button4"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="30px"
                android:backgroundTint="#A4EBF3"
                android:text="เพิ่มเติม"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:src="@drawable/akantuk" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:text="อาคันตุกะ โฮมสเตย์"
                android:textColor="@color/black" />

            <Button
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="30px"
                android:backgroundTint="#A4EBF3"
                android:text="เพิ่มเติม"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>